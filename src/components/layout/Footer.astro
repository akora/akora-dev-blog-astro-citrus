---
import { menuLinks, siteConfig } from "@/site.config";

const year = new Date().getFullYear();
---

<footer
	class="semibold mt-auto flex w-full flex-col items-center justify-center gap-y-2 pb-4 pt-8 text-center align-top text-accent sm:flex-row sm:justify-between sm:text-sm"
>
	<div class="me-0 font-semibold sm:me-4">
		&copy; {siteConfig.author}
		{year}&nbsp;<span class="inline-block">&nbsp;ðŸš€&nbsp;Astro Citrus</span>
	</div>
	<div class="flex flex-col items-center gap-y-2 sm:flex-row sm:gap-x-4 sm:gap-y-0">
		<nav
			aria-label="More on this site"
			class="flex justify-between space-x-4 font-medium text-light md:w-[14rem] w-auto"
		>
			{
				menuLinks.map((link) => (
					<a class="underline-offset-2 hover:text-accent hover:underline" href={link.path}>
						{link.title}
					</a>
				))
			}
		</nav>
		<div class="relative">
			<img
				src="/images/Written-By-a-Human-Not-By-AI-Badge-white@2x.png"
				alt="Written by a Human, Not by AI"
				class="h-6 w-auto block dark:hidden"
				loading="lazy"
			/>
			<img
				src="/images/Written-By-a-Human-Not-By-AI-Badge-black@2x.png"
				alt="Written by a Human, Not by AI"
				class="h-6 w-auto hidden dark:block"
				loading="lazy"
			/>
		</div>
	</div>
</footer>
