---
import type { CollectionEntry } from "astro:content";

interface Props {
	series: CollectionEntry<"series">;
}

const { series } = Astro.props;
---

<article class="rounded-lg border border-color-200 bg-color-50 p-6 hover:bg-color-75 transition-colors">
	<a href={`/series/${series.id}/`} class="block">
		<h3 class="text-lg font-semibold mb-3 text-textColor hover:text-accent-base transition-colors">
			{series.data.title}
		</h3>
		<p class="text-lighter">
			{series.data.description}
		</p>
	</a>
</article>
