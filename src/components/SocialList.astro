---
import { Icon } from "astro-icon/components";

/** 
	Uses https://www.astroicon.dev/getting-started/
	Find icons via guide: https://www.astroicon.dev/guides/customization/#open-source-icon-sets
	Only installed pack is: @iconify-json/mdi
*/
const socialLinks: {
	friendlyName: string;
	isWebmention?: boolean;
	link: string;
	name: string;
}[] = [
	{
		friendlyName: "Github",
		isWebmention: true,
		link: "https://github.com/akora",
		name: "fa6-brands:github",
	},
	{
		friendlyName: "Twitter",
		isWebmention: true,
		link: "https://x.com/AndrasKora",
		name: "fa6-brands:x-twitter",
	},
	{
		friendlyName: "Bluesky",
		link: "https://bsky.app/profile/andraskora.bsky.social",
		name: "fa6-brands:bluesky",
	},
	{
		friendlyName: "Mastodon",
		link: "https://mastodon.social/@akora",
		name: "fa6-brands:mastodon",
	},
	{
		friendlyName: "TikTok",
		link: "https://www.tiktok.com/@andras.kora",
		name: "fa6-brands:tiktok",
	},
	{
		friendlyName: "LinkedIn",
		link: "https://www.linkedin.com/in/andraskora/",
		name: "fa6-brands:linkedin",
	},
	{
		friendlyName: "Facebook",
		link: "https://www.facebook.com/andras.kora",
		name: "fa6-brands:facebook",
	},
	{
		friendlyName: "Substack",
		link: "https://substack.com/@andraskora",
		name: "simple-icons:substack",
	},
	{
		friendlyName: "Medium",
		link: "https://medium.com/@AKora",
		name: "mdi:medium",
	},
	{
		friendlyName: "Website",
		link: "https://andraskora.com/",
		name: "mdi:web",
	},
	{
		friendlyName: "YouTube",
		link: "https://www.youtube.com/@andraskora",
		name: "fa6-brands:youtube",
	},
	{
		friendlyName: "Email",
		link: "mailto:ak@akora.info",
		name: "mdi:email",
	}
];
---

<div class="flex flex-wrap items-center gap-x-2">
	<p>Find me on</p>
	<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		{
			socialLinks.map(({ friendlyName, isWebmention, link, name }) => (
				<li class="flex">
					<a
						class="inline-block hover:text-link drop-shadow-[0px_2.5px_2.5px_rgba(0,0,0,0.175)]"
						href={link}
						rel={`noreferrer ${isWebmention ? "me authn" : ""}`}
						target="_blank"
					>
						<Icon aria-hidden="true" class="h-8 w-8" focusable="false" name={name} />
						<span class="sr-only">{friendlyName}</span>
					</a>
				</li>
			))
		}
	</ul>
</div>
